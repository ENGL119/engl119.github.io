        script.
          health = [100,100],
          health_bar = [0,0],
          move = ['touching','dodging','nothing'],
          $kevin = $('.kevin > div'),
          $martin = $('.martin > div'),
          $bros = $('.bros li > div'),
          round = setInterval(function() {
          if (health[0] <= 0 || health[1] <= 0) {
          if (health[0] <= 0 && health[1] <= 0) {
          $('.bros li > div').addClass('loser');
          } else if (health[0] <= 0) {
          $martin.addClass('salute');
          $kevin.addClass('loser');
          } else if (health[1] <= 0) {
          $kevin.addClass('salute');
          $martin.addClass('loser');
          }
          } else {
          kevinmove = move[Math.floor(Math.random() * move.length)],
          martinmove = move[Math.floor(Math.random() * move.length)];
          setTimeout(function() {
          if (kevinmove == move[0] && martinmove == move[0]) {
          $kevin.addClass(kevinmove + 's');
          $martin.addClass(martinmove + 's');
          } else {
          $kevin.addClass(kevinmove);
          $martin.addClass(martinmove);
          }
          },50);
          if (kevinmove == move[0] && martinmove == move[0]) {
          for (i=0;i<2;i++) {
          health[i] -= 5,
          health_bar[i] += 2.7 * 5;
          setTimeout(function(e) {
          $('.bar li:nth-of-type(' + (e+1) + ') span:nth-of-type(1)').width(health_bar[e] + 'px');
          },250,i);
          setTimeout(function(e) {
          $('.bar li:nth-of-type(' + (e+1) + ') span:nth-of-type(2)').width(health_bar[e] + 'px');
          },500,i);
          }
          } else if ((kevinmove == move[2] || martinmove == move[2]) && (kevinmove == move[0] || martinmove == move[0])) {
          if (kevinmove == move[0]) {
          $x = $martin;
          tarr = 1;
          } else if (martinmove == move[0]) {
          $x = $kevin;
          tarr = 0;
          }
          health[tarr] -= 12.5,
          health_bar[tarr] += 2.7 * 12.5;
          setTimeout(function() {
          $x.addClass('touched');
          $('.bar li:nth-of-type(' + (tarr+1) + ') span:nth-of-type(1)').width(health_bar[tarr] + 'px');
          },250);
          setTimeout(function() {
          $('.bar li:nth-of-type(' + (tarr+1) + ') span:nth-of-type(2)').width(health_bar[tarr] + 'px');
          },500);
          }
          setTimeout(function() {
          $bros.removeClass();
          },1500);
          }
          },1500);
